{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["./test", "./scripts", "./tasks"],
  "exclude": ["node_modules"],
  "files": ["./hardhat.config.ts"],
  "ts-node": {
    "transpileOnly": true,
    "skipIgnore": false,
    "ignore": ["node_modules"]
  }
}
