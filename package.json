{
  "name": "fhevm-bootcamp",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "postinstall": "node scripts/postinstall.js",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:gas": "cross-env REPORT_GAS=true hardhat test",
    "clean": "rimraf artifacts cache types",
    "build": "npm run clean && npm run compile",
    "deploy:local": "hardhat run scripts/deploy-all.ts --network hardhat",
    "deploy:sepolia": "hardhat run scripts/deploy-sepolia.ts --network sepolia",
    "slides:build": "node scripts/build-slides.js",
    "lint:sol": "echo 'Use npx hardhat compile to check Solidity syntax'"
  },
  "keywords": ["fhe", "fhevm", "zama", "bootcamp", "solidity", "encryption", "privacy"],
  "author": "FHEVM Bootcamp Contributors",
  "license": "MIT",
  "description": "Comprehensive bootcamp curriculum for building confidential smart contracts with Zama fhEVM",
  "devDependencies": {
    "@fhevm/hardhat-plugin": "^0.4.0",
    "@marp-team/marp-cli": "^4.2.3",
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@openzeppelin/contracts": "^5.4.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.33",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.2",
    "cross-env": "^7.0.3",
    "dotenv": "^17.2.4",
    "ethers": "^6.16.0",
    "hardhat": "^2.28.5",
    "hardhat-gas-reporter": "^2.3.0",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@fhevm/mock-utils": "^0.4.0",
    "@fhevm/solidity": "^0.10.0"
  }
}
